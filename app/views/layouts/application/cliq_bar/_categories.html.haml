.category-list
  .container
    %ul.list-inline.align-top.pull-left
      -#%li.label-custom1 Categories:
      -cliq_latest = @categories
      -if cliq_latest.count > 0
        -@categories.each do |latest|
          %li{class: ("active" if category_is_active?(latest)),
          style: ("border-top:2px solid ##{get_background_color(latest)}" if category_is_active?(latest))}
            =render "shared/cliq", cliq: latest
      -else
        %li No cliq info currently
    %ul.list-inline.align-top.pull-right
      %li
        =link_to mariomaker_index_path do
          ="Mario Maker:"
          =image_tag 'mario_icon.png', size: '20x18', style:"padding-bottom:3px;"